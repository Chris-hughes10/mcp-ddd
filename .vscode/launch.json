        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File with default args",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // "args": ["/home/azureuser/localfiles/mcp-explore/src/run_weather_service.py", "azure", "simple"],
            // "args": ["/home/azureuser/localfiles/mcp-explore/src/run_weather_service.py", "azure", "resource_selector"],
            "args": ["/home/azureuser/localfiles/mcp-explore/src/run_weather_service.py", "azure", "prompt_aware"],
            "justMyCode": false
        }
    ]
